{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": ["ts-jest", {
        "tsconfig": "tsconfig.json"
        }]
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "testTimeout": 10000
} 